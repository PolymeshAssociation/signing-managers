{
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "cSpell.words": [
    "breakline",
    "buildable",
    "commitlint",
    "hashicorp",
    "nrwl",
    "Parens",
    "pathinfo",
    "Polkadot",
    "polymathnetwork",
    "Polymesh",
    "polymeshassociation",
    "polywallet",
    "satoshi",
    "sonarcloud",
    "tscpaths",
    "Unsub"
  ],
  "cSpell.ignorePaths": [
    "package.json",
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "nx.json",
    ".eslintrc.json",
  ],
  "cSpell.ignoreRegExpList": [
    "/from\\s+(['\"]).*\\1/", // ignore imports
    "/\/\/ TODO @\\w+/", // ignore github handles in TODOs
    "/0x.+/" // ignore hex values
  ],
}